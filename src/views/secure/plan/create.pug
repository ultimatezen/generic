extends ../../layout.pug

block content
	h1 Register plan

	form(action='/cms/secure/plan', method="POST")
		.form-group
			input(type="input", class="form-control", name="name", placeholder="name")
		.form-group
			input(type="text", class="form-control", name="desc", placeholder="desc")
		.form-group
			input(type="number", class="form-control", name="genre", placeholder="genre")
		.form-group
			input(type="number", class="form-control", name="requiredTime", placeholder="requiredTime")
		.form-group
			input(type="number", class="form-control", name="status", placeholder="status")
		.form-group
			input(type="input", class="form-control", name="lang", placeholder="lang")
		.form-group
			input(type="submit", class="btn btn-primary", value="submit")
	each message in errors
		h4(style="color: red;") #{message}
